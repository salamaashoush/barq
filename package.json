{
  "name": "barq-monorepo",
  "private": true,
  "version": "0.1.0",
  "description": "Barq - Lightning fast JSX renderer with fine-grained reactivity via signals",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --cwd packages/kitchen-sink dev",
    "build": "bun run --filter '*' build",
    "typecheck": "bun run --filter '*' typecheck",
    "test": "bun run --filter '*' test",
    "lint": "oxlint --type-aware packages/core packages/extra packages/testing",
    "lint:fix": "oxlint --type-aware --fix packages",
    "format": "oxfmt packages",
    "format:check": "oxfmt --check packages/core packages/extra packages/testing",
    "ci": "oxlint --type-aware --deny-warnings packages/core packages/extra packages/testing && oxfmt --check packages/core packages/extra packages/testing",
    "benchmark": "bun run --cwd packages/benchmark start"
  },
  "devDependencies": {
    "@types/bun": "^1.3.3",
    "oxfmt": "^0.18.0",
    "oxlint": "^1.33.0",
    "oxlint-tsgolint": "latest",
    "tsdown": "^0.11.5",
    "typescript": "^5.9.3"
  }
}
