{
  "name": "zest",
  "version": "0.1.0",
  "description": "Tiny JSX renderer with fine-grained reactivity via signals. No build tools BS, just DOM.",
  "type": "module",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts"
    },
    "./jsx-runtime": {
      "import": "./src/jsx-runtime.ts",
      "types": "./src/jsx-runtime.ts"
    },
    "./jsx-dev-runtime": {
      "import": "./src/jsx-runtime.ts",
      "types": "./src/jsx-runtime.ts"
    }
  },
  "scripts": {
    "build": "bun build src/index.ts src/jsx-runtime.ts --outdir dist --target browser --splitting",
    "dev": "bun build src/index.ts src/jsx-runtime.ts --outdir dist --target browser --splitting --watch",
    "typecheck": "tsc --noEmit",
    "lint": "bunx @biomejs/biome check src",
    "lint:fix": "bunx @biomejs/biome check --write --unsafe src",
    "format": "bunx @biomejs/biome format --write src",
    "test": "bun test"
  },
  "dependencies": {
    "alien-signals": "^1.0.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bun": "^1.3.3",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  },
  "engines": {
    "bun": ">=1.1.0"
  },
  "keywords": [
    "ui",
    "framework",
    "signals",
    "jsx",
    "reactive"
  ]
}
