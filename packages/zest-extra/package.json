{
  "name": "zest-extra",
  "version": "0.1.0",
  "description": "Extra utilities for zest: CSS-in-JS (goober), clsx, variants, and utility hooks",
  "type": "module",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts"
    }
  },
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target browser --splitting",
    "typecheck": "tsc --noEmit",
    "lint": "bunx @biomejs/biome check src",
    "lint:fix": "bunx @biomejs/biome check --write --unsafe src",
    "format": "bunx @biomejs/biome format --write src"
  },
  "dependencies": {
    "zest": "workspace:*",
    "goober": "^2.1.18",
    "@tanstack/query-core": "^5.62.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bun": "^1.3.3",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "zest": "workspace:*",
    "@tanstack/query-core": "^5.0.0"
  },
  "keywords": [
    "zest",
    "css-in-js",
    "clsx",
    "variants",
    "hooks"
  ]
}
