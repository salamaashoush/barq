{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "types": ["@types/bun"],
    "allowImportingTsExtensions": true,
    "jsx": "react-jsx",
    "jsxImportSource": "zest"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
