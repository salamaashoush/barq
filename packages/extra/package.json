{
  "name": "@barqjs/extra",
  "version": "0.1.0",
  "description": "Extra utilities for Barq: CSS-in-JS (goober), clsx, variants, router, and query hooks",
  "keywords": [
    "barq",
    "clsx",
    "css-in-js",
    "query",
    "router",
    "variants"
  ],
  "homepage": "https://github.com/salamaashoush/barq#readme",
  "bugs": {
    "url": "https://github.com/salamaashoush/barq/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/salamaashoush/barq.git",
    "directory": "packages/extra"
  },
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "bun": "./src/index.ts",
      "import": "./dist/index.js"
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "typecheck": "tsc --noEmit",
    "lint": "bunx @biomejs/biome check src",
    "lint:fix": "bunx @biomejs/biome check --write --unsafe src",
    "format": "bunx @biomejs/biome format --write src",
    "prepublishOnly": "bun run build"
  },
  "dependencies": {
    "@tanstack/query-core": "^5.62.0",
    "goober": "^2.1.18"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bun": "^1.3.3",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "@barqjs/core": ">=0.1.0",
    "@tanstack/query-core": "^5.0.0"
  }
}
