{
  "name": "@barqjs/core",
  "version": "0.1.0",
  "description": "Barq - Lightning fast JSX renderer with fine-grained reactivity via signals. No virtual DOM, just direct DOM.",
  "keywords": [
    "barq",
    "fine-grained",
    "framework",
    "jsx",
    "reactive",
    "signals",
    "ui"
  ],
  "homepage": "https://github.com/salamaashoush/barq#readme",
  "bugs": {
    "url": "https://github.com/salamaashoush/barq/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/salamaashoush/barq.git",
    "directory": "packages/core"
  },
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "bun": "./src/index.ts",
      "import": "./dist/index.js"
    },
    "./jsx-dev-runtime": {
      "types": "./dist/jsx-runtime.d.ts",
      "bun": "./src/jsx-runtime.ts",
      "import": "./dist/jsx-runtime.js"
    },
    "./jsx-runtime": {
      "types": "./dist/jsx-runtime.d.ts",
      "bun": "./src/jsx-runtime.ts",
      "import": "./dist/jsx-runtime.js"
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "typecheck": "tsc --noEmit",
    "lint": "bunx @biomejs/biome check src",
    "lint:fix": "bunx @biomejs/biome check --write --unsafe src",
    "format": "bunx @biomejs/biome format --write src",
    "test": "bun test",
    "prepublishOnly": "bun run build"
  },
  "dependencies": {
    "alien-signals": "^1.0.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bun": "^1.3.3",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  },
  "engines": {
    "bun": ">=1.1.0"
  }
}
